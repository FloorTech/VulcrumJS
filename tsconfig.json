{
  "compilerOptions": {
    "target": "es6",
    "module": "Node18",
    "rootDir": "./src",
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "dist/",
    "examples/",
  ]
}